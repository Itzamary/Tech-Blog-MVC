<div class="comments">
  {{#each this}}
  <section class="comment">
      <a class="post-comment" href="/edit/{{id}}"> Edit / Delete comment</a>
    <div class="text">
      {{comment_text}}
    </div>
    <div class="meta"> - 
      {{user.username}}, {{format_date created_at}}
    </div>
  </section>
  {{/each}}
</div>
